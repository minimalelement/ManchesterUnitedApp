<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="405dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bebasneue"
                    android:text="Manchester United"
                    android:textAlignment="center"
                    android:textColor="#cc0000"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="407dp"
                        android:layout_height="160dp"
                        android:layout_alignParentBottom="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/content2" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="410dp"
                    android:layout_height="214dp"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/news_cycle_regular"
                    android:gravity="center"
                    android:text="Manchester United Football Club, commonly referred to as Man United (often stylised as Man Utd), or simply United, is a professional football club based in the Old Trafford area of Manchester, England. The club competes in the Premier League, the top division in the English football league system. Nicknamed the Red Devils, it was founded as Newton Heath LYR Football Club in 1878, but changed its name to Manchester United in 1902. The club moved from Newton Heath to its current stadium, Old Trafford, in 1910."
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/bebasneue"
                    android:gravity="center"
                    android:text="The Red Devils"
                    android:textColor="#cc0000"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/roundedImageView"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/brunof" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="323dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/content1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/bebasneue"
                    android:gravity="center"
                    android:text="Latest Transfer News"
                    android:textColor="#cc0000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/news_cycle_regular"
                    android:gravity="center"
                    android:text="Man Utd are considering Wolves midfielder Ruben Neves as an alternative to Frenkie de Jong, who remains club's No 1 target; United manager Erik Ten Hag has been searching for a new midfielder ahead of the upcoming Premier League season"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10sp"
                    android:fontFamily="@font/bebasneue"
                    android:gravity="center"
                    android:text="Latest Signings"
                    android:textColor="#cc0000"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/lisandro">

                        </ImageView>

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/eriksen">

                        </ImageView>

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/bruno" />

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/scot">

                        </ImageView>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_clickme"
                        android:layout_width="53dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/white"
                        android:scaleType="fitCenter"
                        android:src="@drawable/png_man" />

                    <ImageButton
                        android:id="@+id/btn_clickme2"
                        android:layout_width="53dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/white"
                        android:scaleType="fitCenter"
                        android:src="@drawable/png_loc" />

                    <ImageButton
                        android:id="@+id/btn_clickme3"
                        android:layout_width="40dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:src="@drawable/png_email" />

                    <ImageButton
                        android:id="@+id/btn_clickme4"
                        android:layout_width="48dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:src="@drawable/youtube" />

                    <ImageButton
                        android:id="@+id/newbtn"
                        android:layout_width="42dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:scaleType="fitXY"
                        android:src="@drawable/feedback" />
                </LinearLayout>


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="19dp"
                        android:fontFamily="@font/news_cycle_regular"
                        android:gravity="center"
                        android:text="Predict the Winner"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#cc0000"
                        app:layout_constraintBottom_toTopOf="@+id/select1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dev3"
                        tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/select1"
                            android:layout_width="135dp"
                            android:layout_height="56dp"
                            android:text="Man Utd"
                            android:textSize="20sp"
                            android:layout_marginLeft="15dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.057"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.444" />


                        <RadioButton
                            android:id="@+id/select2"
                            android:layout_width="135dp"
                            android:layout_height="56dp"
                            android:text="Chelsea"
                            android:textSize="20sp"
                            android:layout_marginLeft="70dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.057"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.444" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose the Next Opponent"
                        android:layout_marginTop="20dp"
                        android:textColor="#cc0000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/news_cycle_regular"
                        android:gravity="center"
                        />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join Adidas and get 15% Off !"
                    android:fontFamily="@font/bebasneue"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="40sp"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/store_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/border"
                        android:text="Go to Store" />

                    <Button
                        android:id="@+id/store_btn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/border"
                        android:text="Overview" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</ScrollView>